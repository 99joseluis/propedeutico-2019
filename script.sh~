#!/bin/bash
./reinicio1.sh
tar -zxvf archivos.tar.gz
mv archivos Propedeutico
rm archivos.tar.gz


echo -n "Las apariciones de hola son :" >> data.txt
grep hola archivos/* | wc -l >> data.txt
echo -n "Las apariciones de jose son :" >> data.txt
grep jose archivos/* | wc -l >> data.txt
echo -n "Las apariciones de karla son :" >> data.txt
grep karla archivos/* | wc -l >> data.txt
echo -n "Las apariciones de miguel son :" >> data.txt
grep miguel archivos/* | wc -l >> data.txt
